{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2017",
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
    }
  },
  "include": ["src/**/*"]
}
